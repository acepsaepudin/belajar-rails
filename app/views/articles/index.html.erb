<H1>ini index untuk artikel</H1>
<%= link_to 'Create Article', new_article_path, class: 'btn btn-danger'%>
<div class="container">
<table class="table table-striped">
 <tr>
	<th>Title</th>
	<th>Name</th>
	<th>Content</th>
	<th>Action</th>
 </tr>
 <% @articles.each do |article| %>
 <tr>
	<td><%= article.title %></td>
	<td><%= article.name %></td>
	<td><%= article.content %></td>
	<td><%= link_to "Show", article_path(article), class: 'btn btn-danger' %>
	<%= link_to "Edit", edit_article_path(article), class: 'btn btn-success' %>
	<%= link_to "Delete", article_path(article), class: 'btn btn-info' %></td>
 </tr>
 <% end %>
</table>
</div>


	
	

